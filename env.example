# Pharmazine - Environment Configuration
# Copy this file to .env and update the values before running the project.

# PostgreSQL Database Configuration (Supabase / external Postgres)
DATABASE_URL=postgresql://postgres:YOUR_DB_PASSWORD@YOUR_DB_HOST:5432/postgres?sslmode=require
POSTGRES_DB=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=YOUR_DB_PASSWORD
DIRECT_DATABASE_URL=postgresql://postgres:YOUR_DB_PASSWORD@YOUR_DIRECT_HOST:5432/postgres?sslmode=require
POOLER_DATABASE_URL=postgresql://postgres:YOUR_DB_PASSWORD@YOUR_POOLER_HOST:6543/postgres?sslmode=require

# Supabase Auth (used by backend services)
SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co
SUPABASE_ANON_KEY=YOUR_SUPABASE_ANON_KEY
SUPABASE_SERVICE_ROLE_KEY=YOUR_SUPABASE_SERVICE_ROLE_KEY

# Redis Configuration
REDIS_PASSWORD=change-me

# Application Configuration
SECRET_KEY=pharmazine-secret-key-change-in-production
ENVIRONMENT=development

# API Configuration
# Root of the FastAPI backend (no trailing /api â€” the frontend appends it automatically)
API_BASE_URL=http://localhost:8000

# Frontend (Vite) Configuration
VITE_API_BASE_URL=http://localhost:8000
VITE_APP_NAME=Pharmazine
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Professional Pharmacy Management System
VITE_SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co
VITE_SUPABASE_PUBLISHABLE_KEY=YOUR_SUPABASE_ANON_KEY

# Development Configuration
VITE_NODE_ENV=development
VITE_DEBUG=true
